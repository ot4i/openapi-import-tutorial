{
  "openapi": "3.0.0",
  "info": {
    "title": "ShoppingListAPI",
    "version": "1.0.0",
    "description": "ShoppingListAPI"
  },
  "servers": [
    {
      "url": "/shoppinglistapi/v1"
    }
  ],
  "paths": {
    "/shoppinglist": {
      "get": {
        "parameters": [
          {
            "name": "Limit",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/Limit"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A paged array of shopping list entries",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Items"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Item"
              }
            }
          }
        },        
        "responses": {
          "201": {
            "description": "Null response"
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/shoppinglist/{item}": {
      "put": {
        "summary": "Update a specific item",
        "parameters": [
          {
            "name": "item",
            "in": "path",
            "required": true,
            "description": "The name of the item",
            "schema": {
              "$ref": "#/components/schemas/ItemName"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Item"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Null response"
          }
        }                  
      },
      "delete": {
        "summary": "Delete a specific item",      
        "parameters": [
          {
            "name": "item",
            "in": "path",
            "required": true,
            "description": "The name of the item",
            "schema": {
              "$ref": "#/components/schemas/ItemName"
            }
          }
        ],      
        "responses": {
          "204": {
            "description": "Deleted"
          },
          "404": {
            "description": "Item not found"          
          }
        }     
      },          
      "get": {
        "summary": "Retrieve a specific item",
        "parameters": [
          {
            "name": "item",
            "in": "path",
            "required": true,
            "description": "The name of the item",
            "schema": {
              "$ref": "#/components/schemas/ItemName"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "required": [
          "name",
          "department",
          "description"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "department": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "Items": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Item"
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Limit": {
        "type": "integer"
      },
      "ItemName": {
        "type": "string"
      }
    }
  }
}